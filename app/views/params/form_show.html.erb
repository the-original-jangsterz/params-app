<form action="/form_result" method="post">
  <div>
    <label for="message">Enter message: </label>
    <input type="text" name="form_message" id="message">
  </div>
  <div>
    <input type="submit" value="Submit message!">
  </div>
</form>

<%= form_tag '/form_result', method: :post do %>
  <div>
    <%= label_tag :form_message, 'Enter message: ' %>
    <%= text_field_tag :form_message %>
  </div>
  <div>
    <%= submit_tag 'Submit message!' %>
  </div>
<% end %>
